<?xml version="1.0" encoding="UTF-8"?>
<!--
  web.config for hosting Next.js standalone build on IIS using iisnode.
  Prerequisites:
    - Install iisnode (https://github.com/tjanczuk/iisnode)
    - Build with `next build` (output: .next/standalone + .next/static)
    - Copy .next/standalone, .next/static and public/ to site root.
    - Ensure Node.js 18+ installed on server.
  This config rewrites all requests to server.js while letting static assets be served directly.
-->
<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>

    <rewrite>
      <rules>
        <!-- Serve static Next.js assets directly -->
        <rule name="StaticNextAssets" stopProcessing="true">
          <match url="^(?:_next/static|_next/image|favicon.ico|robots.txt|sitemap.xml|images/|assets/).*$" />
        </rule>

        <!-- All other requests go to Node server.js -->
        <rule name="NextStandalone" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>

    <!-- Enable gzip/brotli if available -->
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />

    <security>
      <requestFiltering>
        <hiddenSegments>
          <add segment="node_modules" />
        </hiddenSegments>
      </requestFiltering>
    </security>

    <!-- Increase Node process ping timeout if heavy startup -->
    <iisnode pingTimeout="30" maxConcurrentRequestsPerProcess="1024" />
  </system.webServer>
</configuration>